{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"lib": ["ES2022"],
		"moduleResolution": "bundler",
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"rootDir": "."
	},
	"include": ["*.ts", "cacheable.ts", "drizzle-cache.ts", "redis.ts"],
	"exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
