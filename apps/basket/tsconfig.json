{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"types": ["bun-types", "autumn-js"],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noEmit": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"],
	"references": [
		{ "path": "../../packages/db" },
		{ "path": "../../packages/redis" },
		{ "path": "../../packages/shared" },
		{ "path": "../../packages/validation" }
	]
}
